<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>it.iubar.desktop.api</groupId>
	<artifactId>iubar-desktop-api</artifactId>
	<version>1.0</version>

	<name>Iubar Desktop Api Client</name>
	<description>Desktop Api Client classes</description>

	<parent>
		<groupId>it.iubar.pom</groupId>
		<artifactId>iubar-pom</artifactId>
		<version>0.0.6</version>
	</parent>

	<build>


		<resources>
			<!-- regular resource processing for everything except config.ini.example -->
			<resource>
				<directory>src/test/resources</directory>
				<includes>
					<include>secret.properties.dist</include>
				</includes>
			</resource>
		</resources>


		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<!-- inherits config from parent: can override if required -->
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>				
 				<!-- LEGGERE: https://stackoverflow.com/questions/36970384/surefire-is-not-picking-up-junit-5-tests?utm_medium=organic&utm_source=google_rich_qa&utm_campaign=google_rich_qa -->
				<version>3.0.0-M3</version>
				<configuration>
					<includes>
						<include>MasterClientTest.java</include>
						<include>MasterClientTest2.java</include>
						<include>MasterJwtClientTest.java</include>
					</includes>
					<excludes>
						<exclude>MasterClientAbstract.java</exclude>
						<exclude>HttpMethods.java</exclude>
					</excludes>
				</configuration>
				<dependencies>
        <dependency>
          <groupId>org.junit.platform</groupId>
          <artifactId>junit-platform-surefire-provider</artifactId>
          <version>1.3.1</version>
        </dependency>				
					<dependency>
						<groupId>org.junit.jupiter</groupId>
						<artifactId>junit-jupiter-engine</artifactId>
						<version>5.3.1</version>
					</dependency>
				</dependencies>
			</plugin>
			
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-client</artifactId>
			<version>2.26</version>
		</dependency>

		<!-- Jersey 2 comes with a JSR330 (dependency injection) implementation baked in, named HK2 -->
		<!-- https://mvnrepository.com/artifact/org.glassfish.jersey.inject/jersey-hk2 -->
		<dependency>
			<groupId>org.glassfish.jersey.inject</groupId>
			<artifactId>jersey-hk2</artifactId>
			<version>2.26</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.9.4</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.module</groupId>
			<artifactId>jackson-module-jaxb-annotations</artifactId>
			<version>2.9.4</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/javax.xml.bind/jaxb-api -->
		<!-- required by Java >= 1.9 -->
		<!-- see https://stackoverflow.com/questions/43574426/how-to-resolve-java-lang-noclassdeffounderror-javax-xml-bind-jaxbexception-in-j -->
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<version>2.3.0</version>
		</dependency>

		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<version>5.3.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>5.3.1</version>
			<scope>test</scope>
		</dependency>
   <dependency>
		<!-- 
		Public API for configuring and launching test plans — typically used by IDEs and build tools 
		(see https://junit.org/junit5/docs/current/user-guide/#launcher-api)
		-->   
        <groupId>org.junit.platform</groupId>
        <artifactId>junit-platform-launcher</artifactId>
        <version>1.3.1</version>
        <scope>test</scope>
    </dependency>
    
		<!-- https://mvnrepository.com/artifact/org.json/json -->
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20180813</version>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.13</version>
		</dependency>


		<!-- https://mvnrepository.com/artifact/com.auth0/java-jwt -->
		<!-- https://github.com/auth0/java-jwt -->
		<dependency>
			<groupId>com.auth0</groupId>
			<artifactId>java-jwt</artifactId>
			<version>3.4.0</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/com.google.firebase/firebase-admin -->
		<!-- <dependency> -->
		<!-- <groupId>com.google.firebase</groupId> -->
		<!-- <artifactId>firebase-admin</artifactId> -->
		<!-- <version>6.5.0</version> -->
		<!-- </dependency> -->


	</dependencies>
	<scm>
		<tag>${project.version}</tag>
		<connection>scm:git:git://github.com/iubar/${project.artifactId}-client.git</connection>
		<developerConnection>scm:git:git://github.com/iubar/${project.artifactId}-client.git</developerConnection>
		<url>https://github.com/iubar/${project.artifactId}-client</url>
	</scm>
</project>
