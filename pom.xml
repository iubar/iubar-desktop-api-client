<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>it.iubar.desktop.api</groupId>
	<artifactId>iubar-desktop-api</artifactId>
	<version>1.1</version>
	<name>Iubar Desktop Api Client</name>
	<description>Desktop Api Client classes</description>
	<parent>
		<groupId>it.iubar.pom</groupId>
		<artifactId>iubar-pom</artifactId>
		<version>0.0.6</version>
	</parent>
	<properties>
		<jersey.client.version>2.25.1</jersey.client.version> <!-- 2.25.1 is the last version for Java 1.7 see https://eclipse-ee4j.github.io/jersey.github.io/documentation/latest/modules-and-dependencies.html#:~:text=x%20almost%20all%20Jersey%20components,runnable%20with%20Java%20SE%206. -->		
		<jackson.version>2.11.3</jackson.version>	
		<junit.jupiter.version>5.7.0-M1</junit.jupiter.version>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/test/resources</directory>
				<includes>
					<include>secret.properties.dist</include>
				</includes>
				<excludes>
					<exclude>secret.properties</exclude>
				</excludes>				
			</resource>
		</resources>
		<plugins>
			<!-- Plugins managed by the parent pom -->
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<!-- LEGGERE: https://stackoverflow.com/questions/36970384/surefire-is-not-picking-up-junit-5-tests?utm_medium=organic&utm_source=google_rich_qa&utm_campaign=google_rich_qa -->
				<configuration>
					<includes>
						<include>MasterClientTest.java</include>
						<include>MasterClientTest2.java</include>
						<include>MasterJwtClientTest.java</include>
					</includes>
					<excludes>
						<exclude>MasterClientAbstract.java</exclude>
						<exclude>HttpMethods.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<!-- / -->
		</plugins>
	</build>
	<dependencies>
		<!-- https://mvnrepository.com/artifact/org.glassfish.jersey.core/jersey-client -->
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-client</artifactId>
			<version>${jersey.client.version}</version>
		</dependency>
 
		<!-- https://mvnrepository.com/artifact/com.fasterxml.jackson.module/jackson-module-jaxb-annotations -->
		<dependency>				
			<groupId>com.fasterxml.jackson.module</groupId>
			<artifactId>jackson-module-jaxb-annotations</artifactId>
			<version>${jackson.version}</version>
		</dependency>
		<!-- JSON-B Api (JSR-367): Yasson reference implementation -->
		<!-- https://mvnrepository.com/artifact/org.eclipse/yasson -->
		<dependency>
		    <groupId>org.eclipse</groupId>
		    <artifactId>yasson</artifactId>
		    <version>2.0.1</version>
		</dependency>
		<!-- JSON-P Default Provider (JSR-353) (la dipendenza già inclusa in yasson)-->		
		<!-- https://mvnrepository.com/artifact/org.glassfish/jakarta.json -->
		<dependency>
		    <groupId>org.glassfish</groupId>
		    <artifactId>jakarta.json</artifactId>
		    <version>2.0.0</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/javax.xml.bind/jaxb-api -->
		<!-- required by Java >= 1.9 -->
		<!-- see https://stackoverflow.com/questions/43574426/how-to-resolve-java-lang-noclassdeffounderror-javax-xml-bind-jaxbexception-in-j -->
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<version>2.3.1</version>
		</dependency>
		<!-- Dependencies managed by the parent pom -->
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>${junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
		<!-- / -->
		<!-- https://mvnrepository.com/artifact/org.json/json -->
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20200518</version>
		</dependency>		
		<!-- https://mvnrepository.com/artifact/commons-codec/commons-codec -->
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.14</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
		<dependency>
		    <groupId>commons-io</groupId>
		    <artifactId>commons-io</artifactId>
		    <version>2.6</version> <!-- Ultima versione che supporta Java 1.7  -->
		</dependency>
		<!-- https://github.com/auth0/java-jwt -->
		<!-- https://mvnrepository.com/artifact/com.auth0/java-jwt -->
		<dependency>
			<groupId>com.auth0</groupId>
			<artifactId>java-jwt</artifactId>
			<!-- ATTENZIONE: la versione 3.11 è l'ultima a supportare Java 1.7 -->
			<!-- see https://github.com/auth0/java-jwt/blob/master/CHANGELOG.md -->
			<version>3.11.0</version> 
					<exclusions>
						<exclusion>
							<groupId>com.fasterxml.jackson.core</groupId>
							<artifactId>jackson-databind</artifactId>
						</exclusion>						
					</exclusions>  
		</dependency>
	</dependencies>
	<scm>
		<tag>${project.version}</tag>
		<connection>scm:git:git://github.com/iubar/${project.artifactId}-client.git</connection>
		<developerConnection>scm:git:git://github.com/iubar/${project.artifactId}-client.git</developerConnection>
		<url>https://github.com/iubar/${project.artifactId}-client</url>
	</scm>
</project>
